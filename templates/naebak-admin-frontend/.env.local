# Naebak Admin Frontend Environment Variables

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8007/api
NEXT_PUBLIC_ADMIN_API_URL=http://localhost:8002/api
NEXT_PUBLIC_SITE_URL=http://localhost:3001

# Service URLs
NEXT_PUBLIC_AUTH_SERVICE_URL=http://localhost:8001
NEXT_PUBLIC_ADMIN_SERVICE_URL=http://localhost:8002
NEXT_PUBLIC_COMPLAINTS_SERVICE_URL=http://localhost:8003
NEXT_PUBLIC_MESSAGING_SERVICE_URL=http://localhost:8004
NEXT_PUBLIC_CONTENT_SERVICE_URL=http://localhost:8005
NEXT_PUBLIC_RATINGS_SERVICE_URL=http://localhost:8006
NEXT_PUBLIC_VISITOR_COUNTER_URL=http://localhost:8008
NEXT_PUBLIC_STATISTICS_URL=http://localhost:8009
NEXT_PUBLIC_NEWS_SERVICE_URL=http://localhost:8010
NEXT_PUBLIC_BANNER_SERVICE_URL=http://localhost:8011
NEXT_PUBLIC_THEME_SERVICE_URL=http://localhost:8012
NEXT_PUBLIC_NOTIFICATIONS_URL=http://localhost:8013

# Admin Configuration
NEXT_PUBLIC_ADMIN_APP_NAME=لوحة إدارة نائبك
NEXT_PUBLIC_ADMIN_APP_DESCRIPTION=لوحة التحكم الإدارية لمنصة نائبك
NEXT_PUBLIC_APP_VERSION=1.0.0

# Admin Features
NEXT_PUBLIC_ENABLE_USER_MANAGEMENT=true
NEXT_PUBLIC_ENABLE_CONTENT_MODERATION=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_SYSTEM_SETTINGS=true
NEXT_PUBLIC_ENABLE_BACKUP_RESTORE=true

# File Upload (Admin)
NEXT_PUBLIC_MAX_FILE_SIZE=52428800
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# Security (Enhanced for Admin)
NEXT_PUBLIC_ENABLE_2FA=true
NEXT_PUBLIC_ENABLE_AUDIT_LOG=true
NEXT_PUBLIC_SESSION_TIMEOUT=1800000
NEXT_PUBLIC_REQUIRE_STRONG_PASSWORD=true

# Admin Permissions
NEXT_PUBLIC_ENABLE_SUPER_ADMIN=true
NEXT_PUBLIC_ENABLE_ROLE_MANAGEMENT=true
NEXT_PUBLIC_ENABLE_PERMISSION_CONTROL=true

# Monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true
NEXT_PUBLIC_ENABLE_REAL_TIME_STATS=true

# Development
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_SHOW_DEBUG_INFO=true
NEXT_PUBLIC_ENABLE_DEV_TOOLS=true
