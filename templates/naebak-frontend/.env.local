# Naebak Frontend Environment Variables

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8007/api
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Service URLs
NEXT_PUBLIC_AUTH_SERVICE_URL=http://localhost:8001
NEXT_PUBLIC_COMPLAINTS_SERVICE_URL=http://localhost:8003
NEXT_PUBLIC_MESSAGING_SERVICE_URL=http://localhost:8004
NEXT_PUBLIC_CONTENT_SERVICE_URL=http://localhost:8005
NEXT_PUBLIC_RATINGS_SERVICE_URL=http://localhost:8006
NEXT_PUBLIC_VISITOR_COUNTER_URL=http://localhost:8008
NEXT_PUBLIC_STATISTICS_URL=http://localhost:8009
NEXT_PUBLIC_NEWS_SERVICE_URL=http://localhost:8010
NEXT_PUBLIC_BANNER_SERVICE_URL=http://localhost:8011
NEXT_PUBLIC_NOTIFICATIONS_URL=http://localhost:8013

# App Configuration
NEXT_PUBLIC_APP_NAME=نائبك
NEXT_PUBLIC_APP_DESCRIPTION=منصة التواصل مع النواب والمرشحين
NEXT_PUBLIC_APP_VERSION=1.0.0

# Features
NEXT_PUBLIC_ENABLE_REGISTRATION=true
NEXT_PUBLIC_ENABLE_GUEST_ACCESS=true
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Security
NEXT_PUBLIC_ENABLE_CSRF=true
NEXT_PUBLIC_SESSION_TIMEOUT=3600000

# Analytics (Optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=

# Development
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_SHOW_VISITOR_COUNT=true
